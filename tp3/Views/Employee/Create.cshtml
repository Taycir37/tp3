@model tp3.Models.Employe

@{
    ViewData["Title"] = "Ajouter un employé";
}

<div class="container mt-4">
    <h1>Ajouter un employé</h1>

    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Departement" class="form-label"></label>
                    <input asp-for="Departement" class="form-control" />
                    <span asp-validation-for="Departement" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Salary" class="form-label"></label>
                    <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Créer" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}