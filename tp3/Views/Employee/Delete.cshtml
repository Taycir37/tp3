@model tp3.Models.Employe

@{
    ViewData["Title"] = "Supprimer l'employé";
}

<div class="container mt-4">
    <h1>Supprimer l'employé</h1>

    <h3 class="text-danger">Êtes-vous sûr de vouloir supprimer cet employé ?</h3>

    <hr />

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nom</dt>
                <dd class="col-sm-9">@Model.Name</dd>

               

                <dt class="col-sm-3">Département</dt>
                <dd class="col-sm-9">@Model.Departement</dd>

                <dt class="col-sm-3">Salaire</dt>
                <dd class="col-sm-9">@Model.Salary.ToString("C")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>