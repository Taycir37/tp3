@model IEnumerable<tp3.Models.Employe>

@{
    ViewData["Title"] = "Liste des Employés";
}

<div class="container mt-4">
    <h1>Liste des Employés</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Ajouter un employé
        </a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Département</th>
                <th>Salaire</th>
                <th>Actions</th>
            </tr> 
        </thead> 
        <tbody> 
            @foreach (var employee in Model)
            {
                <tr> 
                    <td>@employee.Id</td> 
                    <td>@employee.Name</td> 
                    <td>@employee.Departement</td> 
                    <td>@employee.Salary.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-sm btn-info">Détails</a>
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-warning">Modifier</a>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>